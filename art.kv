#:kivy 1.7.1
#:import ListAdapter kivy.adapters.listadapter.ListAdapter
#:import Factory kivy.factory.Factory

<MenuScreen>:
    FloatLayout:
        orientation: 'vertical'
        Label:
            id: w_info
            font_name: 'NotoSansCJK.ttc'
            size_hint: (1, .2,)
            pos_hint: {'x': .0, 'y':.8}
        Label:
            id: w_plus
            color: 0,1,0,1
            text: "+"
            font_size: 72
            size_hint: (.2, .2)
            pos_hint: {'x': .08, 'y':.3}
        Label:
            id: w_equal
            text: "="
            font_size:72
            size_hint: (.2, .2)
            pos_hint: {'x': .265, 'y':.3}


<CameraScreen>
    FloatLayout:
        orientation: 'vertical'
        Label:
            id: w_info
            font_name: 'NotoSansCJK.ttc'
            size_hint: (1, .2,)
            pos_hint: {'x': .0, 'y':.8}
            
            
<ProcessScreen>
    FloatLayout:
        orientation: 'vertical'
        Label:
            id: w_info
            font_name: 'NotoSansCJK.ttc'
            size_hint: (1, .2,)
            pos_hint: {'x': .0, 'y':.8}
        ProgressBar:
            id: w_pb
            min: 0.
            max: 1.
            size_hint_x: 1.
            size_hint_y: None
            height: '48dp'
            pos_hint: {'x': .0, 'y':.78}
        Label:
            id: w_plus
            color: 0,1,0,1
            text: "+"
            font_size: 72
            size_hint: (.2, .2)
            pos_hint: {'x': .08, 'y':.3}
        Label:
            id: w_equal
            text: "="
            font_size:72
            size_hint: (.2, .2)
            pos_hint: {'x': .265, 'y':.3}



<StyleScreen>
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: w_info
            font_name: 'NotoSansCJK.ttc'
            size_hint: (1, .2,)
        Carousel:
            id: w_carousel
            direction: 'right'
            loop: True


    